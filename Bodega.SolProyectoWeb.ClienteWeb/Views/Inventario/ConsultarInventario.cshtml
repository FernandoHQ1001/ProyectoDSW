@model  List<Bodega.SolProyectoWeb.Entidades.Core.Producto>

@{
    ViewBag.Title = "ConsultarInventario";
}

<div class="consulta-inventario-container">
    <!-- Encabezado -->
    <div class="header-container">
        <h2>CONSULTAR INVENTARIO</h2>
    </div>

    <!-- Formulario de búsqueda -->
    <form method="post" action="/Inventario/ConsultarInventario">
        <label for="criterio" style="font-weight: bold;">Criterio de búsqueda:</label>
        <select id="criterio" name="criterio">
            <option value="">SELECCIONAR</option>
            <option value="Categoria">Categoría</option>
            <option value="Precio">Precio</option>
        </select>

        <input type="text" id="valor" name="valor" placeholder="Ingrese valor de búsqueda" />
        <button type="submit" class="btn-primary">Buscar</button>
    </form>

    <!-- Tabla de resultados -->
    <table id="tablax">
        <thead>
            <tr>
                <th>Código</th>
                <th>Producto</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.id_producto</td>
                        <td>@producto.nombre</td>
                        <td>@producto.nombre_categoria</td>
                        <td>@producto.precio</td>
                        <td>@producto.stock</td>
                        <td>@producto.descripcion</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No se encontraron productos.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Botones de acción -->
    <div class="action-buttons">
        <button type="reset" onclick="window.location.href='/Inventario/ConsultarInventario'" class="btn-secondary">Cancelar</button>
    </div>
</div>

@section Scripts{

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Leer mensaje desde los div ocultos en el HTML
            var message = "@Html.Raw(TempData["Message"])";
            var messageType = "@Html.Raw(TempData["MessageType"])";

            console.log("📢 Mensaje recibido:", message);
            console.log("📢 Tipo de mensaje:", messageType);

            if (message !== "") {
                console.log("✅ Ejecutando Swal.fire()");
                Swal.fire({
                    text: message,
                    icon: (["success", "error", "warning", "info"].includes(messageType)) ? messageType : "info",
                    confirmButtonText: 'Aceptar',
                    confirmButtonColor: '#007bff',
                    customClass: {
                        confirmButton: (messageType === "success") ? 'btn-success' :
                            (messageType === "error") ? 'btn-danger' :
                                (messageType === "warning") ? 'btn-warning' :
                                    'btn-info'
                    }
                }).then(() => {
                    console.log("✅ Swal.fire() se mostró correctamente.");
                });
            } else {
                console.log("⛔ No hay mensaje, no se ejecuta Swal.fire()");
            }
        });

        // Formateo de precio antes de enviar formulario
        $(document).ready(function () {
            $('form').submit(function () {
                var valor = $('#valor').val();
                if (valor) {
                    $('#valor').val(valor.replace(',', '.'));
                }
            });
        });
    </script>
}
